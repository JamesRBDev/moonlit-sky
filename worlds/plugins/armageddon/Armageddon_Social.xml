<?xml version= "1.0" encoding= "iso-8859-1"?>
<!DOCTYPE muclient>
<muclient>

<!-- INITIALIZATION -->

<plugin
name         = "Armageddon_Social"
author       = "RiftTalon"
id           = "0690dc470c4a17947315910d"
language     = "Lua"
purpose      = "Adds a myriad of social aliases for pre-made emotes."
date_written = "2017-11-24 16:19:41"
requires     = "5.06"
version      = "3.0"
>
<description trim="y">
<![CDATA[
Adds plenty of roleplay-based emotes.
]]>
</description>
</plugin>

<include name="constants.lua"/>

<!-- ALIASES -->

<aliases>
	<alias
	match       = "salute"
	enabled     = "y"
	group       = "Social"
	ignore_case = "y"
	sequence    = "100"
	>
	<send>emote brings their fist to their chest in salute.</send>
	</alias>

	<alias
	match       = "deepbow *"
	enabled     = "y"
	group       = "Social"
	ignore_case = "y"
	sequence    = "100"
	>
	<send>emote bows deeply in the presence of ~%1.</send>
	</alias>

	<alias
	match       = "glanceroom"
	enabled     = "y"
	group       = "Social"
	ignore_case = "y"
	sequence    = "100"
	>
	<send>emote shifts their eyes to survey the room.</send>
	</alias>

	<alias
	match       = "smirk"
	enabled     = "y"
	group       = "Social"
	ignore_case = "y"
	sequence    = "100"
	>
	<send>emote smirks.</send>
	</alias>

	<alias
	match       = "snicker"
	enabled     = "y"
	group       = "Social"
	ignore_case = "y"
	sequence    = "100"
	>
